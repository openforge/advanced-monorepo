{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@company-name/data-access/glossary": [
                "libs/data-access/glossary/src/index.ts"
            ],
            "@company-name/data-access/models": [
                "libs/data-access/models/src/index.ts"
            ],
            "@company-name/data-access/services": [
                "libs/data-access/services/src/index.ts"
            ],
            "@company-name/features/glossary-category-module": [
                "libs/features/glossary-category-module/src/lib/glossary-category.module"
            ],
            "@company-name/features/glossary-home-module": [
                "libs/features/glossary-home-module/src/lib/glossary-home.module"
            ],
            "@company-name/ui/components": [
                "libs/ui/components/src/index.ts"
            ],
            "@company-name/ui/modals": [
                "libs/ui/modals/src/index.ts"
            ],
            "@company-name/util/directives": [
                "libs/util/directives/src/index.ts"
            ],
            "@company-name/util/enums": [
                "libs/util/enums/src/index.ts"
            ],
            "@company-name/util/pipes": [
                "libs/util/pipes/src/index.ts"
            ],
            "@company-name/shared": [
                "libs/shared/src/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}